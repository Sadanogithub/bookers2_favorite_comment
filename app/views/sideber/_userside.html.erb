      <% end %>



    <% else %>
      <%= attachment_image_tag side, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default_image.jpg" %>
      <table class="table">
      <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= side.name %></th>
      </tr>
