<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>
<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <div class=" form-group">
  <label for="user_name">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", :class => "form-control" %>
  </div>

  <div class=" form-group">
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "default_image.jpg" %>
  <label for="user_mage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>
  <label for="user_introduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputBody", placeholder:"introduction", :class => "form-control"  %>
  <%= f.submit "Update User", :class => "btn btn-secondary"  %>
<% end %>

</div>
</div>
</div>