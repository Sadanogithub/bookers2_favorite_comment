<%= flash[:messge] %>
<% if (render "layouts/flash") == "{}"%>
<% else %>
<%= render 'layouts/flash' %>
<% end %>
<div class="container px-5 px-sm-0">


  <div class="error_explanation">
    <% if @book.errors.any? %>
    <h3>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  </h3>
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
  <% end %>
  </div>

  <div class="row">
<div class="col-md-3">
  <h2>User info</h2>
  <% @users.all.each do |user| %>
  <% if user.id == current_user.id %>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default_image.jpg" %>
  <table class="table">

      <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
      </tr>
       </tbody>
       </table>

       <%= link_to edit_user_path(user) do %>
       <div class="row">
        <div class="btn btn-outline-secondary btn-block" >
      <i class="fas fa-user-cog"></i>
      </div>
      </div>
<% end %>

      <% break %>
    <% end %>
  <% end %>

<h2 class="mt-3">New book</h2>
<%= form_with model: @book, local:true do |f| %>
<div class="form-group">
  <lavel for="book_title">Title</lavel>
  <%= f.text_field :title, :class => "form-control"%>
</div>
<div class="form-group">
  <lavel for="book_opinion">Opinion</hlavel>
  <%= f.text_area :body, :class => "form-control" %>
</div>
  <div class="form-group">

  <%= f.submit "Create Book", :class => "btn btn-success" %>

</div>
<% end %>

</div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
    <%= link_to user_path(book.user.id) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default_image.jpg" %>
    <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      
      <% if book.favorited_by?(current_user) %>
      <td>
      <%= link_to book_favorites_path(book), method: :delete do %>
        <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
      <% end %>
      </td>
      <% else %>
      <td>
      <%= link_to book_favorites_path(book), method: :post do %>
        <i class="fa-regular fa-heart"></i><%= book.favorites.count %>
      <% end %>
    </td>
    
  <% end %>
      <td>コメント件数:<%= book.book_comments.count %></td>
      </tr>
      <% end %>
  </tbody>

</table>

</div>

</div>
</div>