<h1>User info</h1>
<% Book.all.each do |book| %>
<% if book.user.id == current_user.id %>
<div>
      <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default_image.jpg" %>
      <h3>name <%= book.user.name %></h3>
      <p>introduction <%= book.user.body %></p>
      <p><%= link_to "<i class="fa-solid fa-user"></i>", user_path(book.user) %></p>
      <% break %>
    <% end %>

</div>

<% end %>

<h1>New Book</h1>
<%= form_with model: Book.new, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>